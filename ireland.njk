---
pagination:
  data: country_hills.i_mountains
  size: 100
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Irish Hills</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Irish Hills</h1>
  <ol>
    {%- for item in pagination.items %}
    {{ item.hillnumber }}. {{ item.hillname }} : {{ item.metres }}m <br/>
    {% endfor -%}
  </ol>

  <nav aria-labelledby="my-pagination">
    {% if page.url != pagination.href.first %}<a href="{{ pagination.href.first }}">First</a>{% else %}First{% endif %}
    {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous</a>{% else %}Previous{% endif %}
    {%- for pageEntry in pagination.pages %}
    <a href="{{ pagination.hrefs[loop.index0] }}" {% if page.url == pagination.hrefs[loop.index0] %}aria-current="page"{% endif %}>{{ loop.index }}</a>
    {%- endfor %}
    {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% else %}Next{% endif %}
    {% if page.url != pagination.href.last %}<a href="{{ pagination.href.last }}">Last</a>{% else %}Last{% endif %}
  </nav>
</body>
</html>